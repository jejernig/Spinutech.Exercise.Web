@model Spinutech.Exercise.Web.Models.ExerciseViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-3">
                <div class="card-header text-center">
                    <h3>Palindrome Checker</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Palindrome"></label>
                        <input id="validateInput" name="Palindrome" type="number" class="form-control" placeholder="Enter a number" />
                        <span asp-validation-for="Palindrome" class="text-danger"></span>
                    </div>
                    <button type="button" id="validateButton" class="btn btn-primary btn-block mt-3">Submit</button>
                </div>
                <div class="card-footer text-center">
                    <div id="result"></div>
                </div>
            </div>
        </div>
    </div>
</div>
